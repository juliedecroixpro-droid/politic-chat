# API Keys (REQUIRED)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Security (Change in production!)
SECRET_KEY=change-this-to-a-random-secret-key-in-production

# Database
DATABASE_URL=sqlite:///./politic_chat.db
CHROMA_PERSIST_DIR=./chroma_db

# Rate Limiting
RATE_LIMIT_PER_DAY=20

# Cost Monitoring
DAILY_BUDGET_ALERT_USD=10.0

# Document Processing
MAX_PAGES=100
MAX_FILE_SIZE_MB=50

# LLM Settings
PRIMARY_MODEL=claude-3-haiku-20240307
FALLBACK_MODEL=gpt-3.5-turbo
EMBEDDING_MODEL=text-embedding-3-small

# CORS (Add your production domains here)
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000", "http://localhost:5174"]
